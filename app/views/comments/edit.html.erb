    <% if params[:wine_id] %>
      <% comment = Comment.where(commented_on_type: "Wine", commented_on_id: params[:id] ).first %>
      <p><b><%= "#{comment.user.username}" %></b></p>
      <%#  <p>Note: <%= comment.note%><%# </p>er%>
      <p><% wine = Wine.find(params[:match_id]) %></p>
      <%= simple_form_for [wine, comment] do |f| %>
        <%= f.input :commentaire, input_html: {id: 'commentaire', value: comment.commentaire }%>
        <%= f.input :note, collection: (1..5).to_a, label: "Note", input_html: {data: { controller: "star-rating"}}  %>
         <%= f.submit class: "d-none" %>
      <% end %>
    <% end %>

    <% if params[:dish_id] %>
