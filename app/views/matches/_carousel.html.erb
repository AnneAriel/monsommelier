<div class="carousel">
  <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="matches-search">
        <% @matches.each do |match| %>
          <div class="carousel-item active">
            <% if match.wine.photo.attached? %>
              <%= cl_image_tag match.wine.photo.key, class:"d-block w-75" %>
            <% end %>
            <div class="descriptif-match-search carousel-caption d-md-block">
              <h6><%= match.wine.appellation %> - <%= match.wine.couleur %> </h6>
              <h6> Accord : <%= match.dish.nom %></h6>
            </div>
            <div class="note-accord">
            <% match.comments.average(:note).to_i.times do %>
                  <i class="fa-solid fa-star"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="carousel-item">
        <img src="https://d2b8wt72ktn9a2.cloudfront.net/mediocre/image/upload/c_pad,f_auto,h_600,q_auto,w_600/kkxy0fp9nlzvo8zwbepx.png" class = "d-block w-75",alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5> DÃ©couvrons de nouveaux accords </h5>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
