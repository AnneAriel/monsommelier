<div class="container">
  <div class="back text-center">
  <i class="fa-solid fa-circle-chevron-left fa-xl"></i><%= link_to "retour", matches_path(query: params[:value]) %>
  </div>

  <div class="col-sm-6 bicard">
    <div class="card rounded-4 shadow mb-4 ml-2" >
      <div class="card-body">
        <div class = "upper-card">
            <% if current_user.favorited?(@match) %>
                <i data-action="click->favourite#toggle"  data-controller="favourite" data-favourite-target="bookmark" data-favourite-class-value="match" class="fa-solid fa-bookmark fa-2xl" id="<%=@match.id%>"></i>
              <% else %>
                <i data-action="click->favourite#toggle"  data-controller="favourite" data-favourite-target="bookmark" data-favourite-class-value="match" class="fa-regular fa-bookmark fa-2xl" id="<%=@match.id%>"></i>
            <% end %>
            <% if @match.wine.comments.average(:note).to_i != 0 && @match.wine.comments.average(:note).to_i != nil %>
               <h1>Accord</h1>
              <div class="star">
                <div class="note-vin">
                  <%= @match.wine.comments.average(:note).to_i %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="row mb-6">
          <div class="col-sm-6 bicard" style="position:relative;">
            <% if @match.wine.photo.attached? %>
              <%= cl_image_tag @match.wine.photo.key, height: 500, width: 400, crop: :fit, class:"card-img-top rounded-4" %>
            <% end %>
            <div class="color_tag_show">
              <% if @match.wine.couleur == "blanc" %>
                <div class="white_tag_show" >
                  <span class="badge rounded-pill">Blanc</span>
                </div>
                <% elsif @match.wine.couleur == "rouge" %>
                  <div class="red_tag_show" >
                    <span class="badge rounded-pill">Rouge</span>
                  </div>
                <% else %>
                  <div class="rose_tag_show">
                  <span class="badge rounded-pill text-dark">Ros√©</span>
                </div>
              <%end %>
            </div>
          </div>
          <div class="col-sm-6 bicard">
            <div class="infos-wine text-center">
              <h3 class = "nom-vin"><%= @match.wine.nom %></h3>
              <p><%= @match.wine.appellation %> </p>
              <h4> <i class="fa-solid fa-utensils"></i>  <%= @match.dish.nom %></h4>
              <div class="star">
                <% @match.comments.average(:note).to_i.times do %>
                <i class="fa-solid fa-star"></i>
                <% end %>
              </div>
            </div>
          </div>

          <div class="boutons-liens-accord">
            <% if @match.user == current_user %>
              <%= link_to match_path(@match), style:"text-decoration:none;color:black;text-align:center;",
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <i class="fa-solid fa-x fa-lg"></i>
              <% end %>

              <%= link_to edit_match_path(@match), style:"text-decoration:none;color:black;text-align:center;" do %>
                <i class="fa-solid fa-pen fa-lg"></i>
              <% end %>
            <% end %>

            <%= link_to new_match_comment_path(@match), style:"text-decoration:none;color:black;text-align:center;" do %>
              <i class="fa-regular fa-comment fa-lg"></i>
            <% end %>
          </div>

          <%#= link_to "Noter",  new_match_comment_path(@match), class:"btn btn-ghost" %>
          </div>
        </div>
      </div>
    </div>
    <div class="comments">
      <div class="row pt-4">
        <div class="col-12 col-lg-8">
          <div class="row">
            <% @comments_select = Comment.where(commented_on_type: "Match", commented_on_id: params[:id] ) %>
            <% @comments_select.each do |comment| %>
            <div class="col-sm-6 bicard">
              <div class="card rounded-4 shadow mb-4 ml-2" >
                <div class="card-body">
                  <% if current_user.photo.attached? %>
                    <%= cl_image_tag comment.user.photo.key, class:"avatar card-comment-user" %>
                  <% else %>
                    <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://cdn-icons-png.flaticon.com/512/1659/1659503.png" />
                  <% end %>
                  <p><b>Evaluateur: <%= "#{comment.user.username}" %></b></p>
                  <p>Note: <%= comment.note%></p>
                  <p><%= comment.commentaire%></p>
                  <% if comment.user == current_user %>
                    <%= link_to match_comment_path(@match, comment), style:"text-decoration:none;color:black;text-align:center;",
                      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                      <i class="fa-solid fa-x fa-lg"></i>
                    <% end %>
                    <%= link_to edit_match_comment_path(@match, comment), style:"text-decoration:none;color:black;text-align:center;" do %>
                      <i class="fa-solid fa-pen fa-lg"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
            <% end %>
          </div >
        </div>
      </div>
    </div>
  </div>
</div>
