<div class="container">



  <div class="row mb-6">
    <% @matches.each do |match| %>
      <div class="col-sm-6 bicard">
        <%= link_to  match_path(match), style:"text-decoration:none;color:black;" do %>
          <div class="card rounded-4 shadow mb-4 ml-2" >
            <div class="card-body">
              <div class="row mb-6">
                <div class="col-sm-6 bicard">
                  <% if match.wine.photo.attached? %>
                    <%= cl_image_tag match.wine.photo.key, height: 300, width: 400, crop: :fill, class:"card-img-top rounded-4" %>
                  <% end %>
                </div>

                <div class="col-sm-6 bicard">
                <div class="titre-vin-carte-accord">
                  <h3><%= match.wine.nom %></h3>
                  <h3> ④ </h3>
                </div>
                  <p><%= match.wine.appellation %> - <%= match.wine.couleur %> </p>
                  <h4> Accord : <%= match.dish.nom %></h4>
                  <p>Commentaire</p>
                  <p class="star"> ⭐️⭐️⭐️⭐️⭐️ </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>


