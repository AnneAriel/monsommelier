<div class="background">

  <div class="container">

    <% if user_signed_in? %>
          <h2 id="titre-home"> Testez de nouvelles alliances ! </h2>
          <div class="boutons-home">
            <%= link_to "Voir les accords", wines_path, class:"btn btn-ghost" %>
            <% else %>
            <%= link_to "Log in", wines_path, class:"btn btn-ghost" %>
            <% end %>
          </div>

    <div class="carousel">
      <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="10000">
            <img src="https://www.clos19.com/on/demandware.static/-/Sites-mh-master/default/dw9867bc5b/images/large/clos_des_lambrays/packshots/CLOS-DES-LAMBRAYS-RED-WINE-GRAND-CRU-2018-1088624_1.jpg?im=Resize,width=408,height=544" class="d-block w-75" alt="...">
          </div>
          <div class="carousel-item" data-bs-interval="2000">
            <img src="https://www.clos19.com/on/demandware.static/-/Sites-mh-master/default/dwb739855d/images/large/mercier/packshots/MERCIER-CHAMPAGNE-VENDANGE-2010-1090813_1.jpg?im=Resize,width=408,height=544" class="d-block w-75" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://www.clos19.com/on/demandware.static/-/Sites-mh-master/default/dw79cc3358/images/large/ao_yun/packshots/AO-YUN-RED-WINE-2017-75CL-1091359_1.jpg?im=Resize,width=408,height=544" class="d-block w-75" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

  </div>
</div>
