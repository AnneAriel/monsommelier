<div class="container d-flex justify-content-center">
  <div class="col-lg-6 col-12">
    <div class="card rounded-4 border-0 shadow mb-4 ml-2 p-4">
    <h1 class="text-center" >Add a new wine</h1>
      <%= simple_form_for(@wine) do |f| %>
        <%= f.input :nom %>
        <%= f.input :appellation %>
        <%= f.select :couleur, ["rouge","blanc","rosé"] %>
        <%= f.input :annee %>
        <%= f.input :quantité %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
